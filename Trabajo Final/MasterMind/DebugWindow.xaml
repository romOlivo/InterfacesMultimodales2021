<Window x:Class="MasterMind.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterMind"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Closing="Window_Closing"
        Title="DebugWindow" Height="300" Width="500">
    <StackPanel>
        <Label HorizontalAlignment="Center" FontSize="36" Margin="12"> Debug </Label>
        <UniformGrid Rows="1" Columns="2">
            <Label FontSize="24" HorizontalAlignment="Right" Margin="8">Solution: </Label>
            <Label FontSize="24" HorizontalAlignment="Left" Margin="8" Name="LSol">????</Label>
        </UniformGrid>

    </StackPanel>
</Window>
