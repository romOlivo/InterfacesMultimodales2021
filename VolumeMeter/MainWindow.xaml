<Window x:Class="VolumeMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VolumeMeter"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="MainWindow">
    <DockPanel>
        <Slider DockPanel.Dock="Bottom" Minimum="0" Maximum="100" Name="MySlider" Margin="8" ValueChanged="Slider_ValueChanged"></Slider>
        <Canvas Name="MyCanvas" Width="800" Height="600" Background="YellowGreen"/>
    </DockPanel>
</Window>
