<Window x:Class="DemoSynthesis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoSynthesis"
        mc:Ignorable="d"
        SizeToContent="Height"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="myText" FontSize="30" Height="200" Width="auto" Margin="4" AcceptsReturn="True"/>
        <Button Click="Button_Click" FontSize="40" Margin="8"> Read </Button>
    </StackPanel>
</Window>
