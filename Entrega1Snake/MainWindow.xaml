<Window x:Class="Entrega1Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Entrega1Snake"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="MainWindow" Height="600" Width="900">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Opciones">
                <MenuItem Header="_Obstaculos Extra" IsCheckable="True" Checked="moreObstacles_Checked" 
                          Unchecked="moreObstacles_Unchecked" Name="moreObstacles"/>
            </MenuItem>
        </Menu>
        <Canvas Name="MyCanvas" Height="600" Width="900" Background="YellowGreen"/>
    </DockPanel>
</Window>
